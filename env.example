# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# BBPS API Configuration (SparkUpTech)
BBPS_API_BASE_URL=https://api.sparkuptech.in/api/ba
BBPS_PARTNER_ID=your_bbps_partner_id
BBPS_CONSUMER_KEY=your_bbps_consumer_key
BBPS_CONSUMER_SECRET=your_bbps_consumer_secret
USE_BBPS_MOCK=false
# Set to true for local development with mock data
# Set to false for production (real API calls)

# Payout API Configuration (SparkUpTech Express Pay)
# Uses same credentials as BBPS (BBPS_PARTNER_ID, BBPS_CONSUMER_KEY, BBPS_CONSUMER_SECRET)
PAYOUT_API_BASE_URL=https://api.sparkuptech.in/api/fzep/payout
USE_PAYOUT_MOCK=false
# IMPORTANT: Set to false for production - this controls real money transfers!
PAYOUT_CHARGE_IMPS=5
PAYOUT_CHARGE_NEFT=3
PAYOUT_MIN_AMOUNT=100
PAYOUT_MAX_AMOUNT=200000

# BBPS Backend URL (Optional - EC2)
# Leave empty to use Amplify API routes (same-origin)
# Set to EC2 backend URL if using separate server (e.g., https://api.samedaysolution.in)
# IMPORTANT: EC2 IP must be whitelisted with SparkUpTech for BBPS API to work
NEXT_PUBLIC_BBPS_BACKEND_URL=

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Email Configuration (SMTP)
SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@samedaysolution.in
SMTP_PASSWORD=your_email_password
SMTP_FROM=info@samedaysolution.in

# Application URL
NEXT_PUBLIC_APP_URL=https://samedaysolution.in

# Node Environment
NODE_ENV=development

